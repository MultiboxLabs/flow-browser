{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/refs/heads/master/packages/app-builder-lib/scheme.json",
  "appId": "dev.iamevan.flow",
  "productName": "Flow",
  "directories": {
    "buildResources": "build"
  },
  "files": [
    "!**/.vscode/*",
    "!src/*",
    "!electron.vite.config.{js,ts,mjs,cjs}",
    "!{.eslintcache,eslint.config.mjs,.prettierignore,.prettierrc,dev-app-update.yml,CHANGELOG.md,README.md}",
    "!{.env,.env.*,.npmrc,bun.lock}",
    "!{tsconfig.json,tsconfig.node.json,tsconfig.web.json}"
  ],
  "protocols": [
    {
      "name": "http URLs",
      "schemes": ["http", "https"]
    }
  ],
  "fileAssociations": [
    {
      "ext": "html",
      "description": "HTML Document",
      "role": "Viewer"
    },
    {
      "ext": "xhtml",
      "description": "XHTML Document",
      "role": "Viewer"
    },
    {
      "ext": "pdf",
      "description": "PDF Document",
      "role": "Viewer"
    }
  ],
  "asarUnpack": ["assets/**"],
  "win": {
    "executableName": "flow"
  },
  "nsis": {
    "artifactName": "${name}-${version}-setup.${ext}",
    "shortcutName": "${productName}",
    "uninstallDisplayName": "${productName}",
    "createDesktopShortcut": "always"
  },
  "mac": {
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": false
  },
  "dmg": {
    "artifactName": "${name}-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb", "flatpak"],
    "category": "Utility"
  },
  "appImage": {
    "artifactName": "${name}-${version}.${ext}"
  },
  "flatpak": {
    "artifactName": "${name}-${version}.${ext}"
  },
  "npmRebuild": false,
  "publish": {
    "provider": "github",
    "owner": "multiboxlabs"
  }
}
